<%= form_for @changeset, @action, fn f -> %>
<%= if @changeset.action do %>
<div class="alert alert-danger">
  <p>Oops, something went wrong! Please check the errors below.</p>
</div>
<% end %>


<%= textarea f, :body, cols: 90, rows: 1, class: "form-control ml-3"%>
<%= error_tag f, :body %>
<%= hidden_input f, :vote%>
<%= hidden_input f, :event_id %>

<%= submit "Comment", class: "btn btn-lg btn-primary mr-2 font-weight-bold"%>
<% end %>
